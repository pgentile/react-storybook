{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Search request",
  "required": [
    "origin",
    "destination",
    "departureDate"
  ],
  "properties": {
    "origin": {
      "$ref": "#/definitions/station",
      "title": "Origin"
    },
    "destination": {
      "$ref": "#/definitions/station",
      "title": "Destination"
    },
    "departureDate": {
      "type": "string",
      "title": "Departure date",
      "format": "date-time"
    },
    "inwardDepartureDate": {
      "type": "string",
      "title": "Inward departure date",
      "format": "date-time"
    }
  },
  "definitions": {
    "station": {
      "type": "object",
      "required": [
        "type",
        "code"
      ],
      "properties": {
        "type": {
          "type": "string",
          "title": "Code type",
          "enum": ["RESARAIL", "UIC"],
          "default": "RESARAIL"
        },
        "code": {
          "type": "string",
          "title": "Location code"
        }
      }
    }
  }
}
